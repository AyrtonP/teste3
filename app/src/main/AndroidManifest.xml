<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.toolbox.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalendarioActivity"
            android:label="@string/title_activity_calendario"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.toolbox.app.MainActivity" />
        </activity>
        <activity
            android:name=".SpinnerActivity"
            android:label="@string/title_activity_spinner"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.toolbox.app.MainActivity" />
        </activity>
        <activity
            android:name=".ListViewCustomizadaActivity"
            android:label="@string/title_activity_list_view_customizada"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.toolbox.app.MainActivity" />
        </activity>
        <activity android:name=".ListViewSimplesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.toolbox.app.MainActivity" />
        </activity>
    </application>

</manifest>